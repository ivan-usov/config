{
    "editor.rulers": [100],
    "editor.minimap.enabled": false,
    "editor.renderLineHighlight": "none",
    "editor.autoClosingBrackets": "never",
    "editor.autoClosingQuotes": "never",

    "diffEditor.renderSideBySide": false,

    "extensions.ignoreRecommendations": true,
    "extensions.showRecommendationsOnlyOnDemand": true,

    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.autoSave": "onFocusChange",

    "telemetry.enableTelemetry": false,

    "window.titleBarStyle": "custom",
    "window.zoomLevel": 0,

    "workbench.colorTheme": "Default Light+",
    "workbench.startupEditor": "none",
    "workbench.statusBar.feedback.visible": false,
    "workbench.settings.editor": "json",

    "terminal.integrated.fontSize": 13, // TODO: https://github.com/Microsoft/vscode/issues/35901

    "git.confirmSync": false,

    "python.pythonPath": "~/miniconda3/envs/py36/bin/python",
    "python.formatting.provider": "none",
    "python.sortImports.args": ["--line-width=100", "--balanced", "--multi-line=2"],
    "python.linting.pylintArgs": [
        "--disable=design",
        "--disable=line-too-long,invalid-name,too-many-lines,missing-docstring,global-statement",
        "--disable=fixme,logging-fstring-interpolation",
    ],

    "editor.tokenColorCustomizations": {
        "textMateRules": [
        {
            "scope": "string.quoted.docstring.multi.python",
            "settings": {
                "foreground": "#808080"
            }
        },
        ]
    },

    "go.goroot": "~/miniconda3/envs/go/go",
}
